generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  password      String
  username      String
  refreshToken  String?
}

model Account {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  transactions  Transaction[]
}

model Transaction {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  account       Account @relation(fields: [accountId], references: [id])
  accountId     String @db.ObjectId
}